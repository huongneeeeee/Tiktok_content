# Environment Variables Template
# Copy this file to .env at project root and fill in the values

# ============================================================
# REQUIRED
# ============================================================

# Google AI API Key (for Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================
# MongoDB Configuration
# ============================================================
MONGO_URI=mongodb://localhost:27017/video_analysis_ai

# ============================================================
# Qdrant Vector Database
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=video_analysis_vectors

# ============================================================
# OPTIONAL - Paths
# ============================================================
UPLOAD_DIR=./uploads

# ============================================================
# OPTIONAL - AI APIs
# ============================================================

# STT API
STT_API_URL=http://localhost:8019/stt/simple

# OpenAI (if using)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini (alternative name)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================
# OCR Configuration
# ============================================================
OCR_ENABLED=true
OCR_LANG=vie
OCR_MAX_FRAMES=10
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
