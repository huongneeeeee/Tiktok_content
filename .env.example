# TikVault Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: API Keys
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# DATABASE (Optional: defaults provided)
# ===========================================
MONGO_URI=mongodb://localhost:27017
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ===========================================
# SERVICES
# ===========================================
# Google Drive folder ID for video storage
GDRIVE_FOLDER_ID=your_gdrive_folder_id_here

# Speech-to-Text API URL (default: local service)
STT_API_URL=http://localhost:8019/stt/simple

# ===========================================
# OCR Settings (PaddleOCR)
# ===========================================
# Enable/disable OCR processing
OCR_ENABLED=true

# Language for OCR (vi, en, ch, or multilingual)
OCR_LANG=vi

# Use GPU for OCR (requires CUDA + paddlepaddle-gpu)
OCR_USE_GPU=false

# Maximum frames to extract per video for OCR
OCR_MAX_FRAMES=10

# Minimum confidence threshold for OCR results (0.0-1.0, recommend >= 0.75)
OCR_CONFIDENCE_THRESHOLD=0.75
